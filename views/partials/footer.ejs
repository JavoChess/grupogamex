            let valores = {};
            $("#" + frm).find(":input").each(function () {  /* 'function' is needed here */
                valores[this.name] = $(this).val();
            });
            return valores;
            /*Source: https://stackoverflow.com/questions/5603117/jquery-create-object-from-form-fields */
        }
        
        
