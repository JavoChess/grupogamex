        /* Limpia los objetos de un form */ 
        function limpiaObjetosEnForm(frm) {
            // 'function' is needed here 
            $("#" + frm).find(":input").each(function () {  
                $(this).val("");
            });
        }

        /* Construye un objeto con los inputs de un form */ 
